{
	"compilerOptions": {
		"lib": ["esnext", "dom"],
		"target": "esnext",
		"module": "esnext",

		"moduleResolution": "node",
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,

		"paths": {
			"@/*": ["../*"]
		},

		"rootDir": "src",
		"baseUrl": "src",
		"outDir": "scripts",
		"jsx": "react-jsx",
		"jsxImportSource": "jsx-dom",

		"allowJs": true,
		"removeComments": true,

		"strict": true,
		"noImplicitThis": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noEmitHelpers": true,
		"experimentalDecorators": true
	},
	"include": ["src"]
}
